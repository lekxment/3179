{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "data": {
      "url": "https://raw.githubusercontent.com/lekxment/3179/refs/heads/main/a2/gdp_and_population.csv"
    },
    "params": [
        {
            "name": "Continent_selection",
            "bind": {
              "input": "select",
              "options": [null, "North America" , "South America", "Europe", "Africa", "Asia", "Oceania"],
              "labels": [
                "Show All",
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "name": "Continent Selection: "
            }
        }
    ],
    "transform": [
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      }
    ],
    "encoding": {
        "x" : {
            "field" : "GDP",
            "type": "quantitative",
            "title": "GDP ($USD millions)",
            "axis": {
                "tickCount": 5,
                "titleFontSize": 16,
                "labelFontSize": 14
            },
            "scale": {"type": "log", "domain": [1e8, 2.5e15]}
        },
        "y": {
            "field": "Life Expectancy",
            "type": "quantitative",
            "title": "Life Expectancy",
            "axis": {
                "tickCount": 7,
                "titleFontSize": 16,
                "labelFontSize": 14
            },
            "scale": {"domain": [50, 90]}
        }
    },
    "layer": [
        {
            "mark" : "circle",
            "encoding": {
                "size" : {
                    "field" : "Population",
                    "type": "quantitative",
                    "scale" : {
                        "type": "threshold",
                        "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
                        "range": [10, 50, 150, 200, 300, 400]
                    },
                    "legend" : {"format" : ".2s"}
                },
                "color" : {
                    "field" : "Continent",
                    "type": "nominal",
                    "scale": {
                    "domain": ["North America", "South America", "Europe", "Africa", "Asia", "Oceania"],
                    "range": ["#56B4E9", "#F0E442" ,"#FF0000 ", "#0000A5", "#E69F00", "#008000"]
                    },
                    "legend": {
                    "title": "Continent"
                    }
                },
                "opacity" : {"value" : 0.9},
                "tooltip" : [
                    {"field" : "Country" , "type": "nominal" , "title" : "Country"},
                    {"field" : "GDP" , "type": "quantitative" , "title" : "GDP (USD Millions)" , "format" : ".2f"},
                    {"field" : "Life Expectancy" , "type": "quantitative" , "title" : "Life Expectancy (years)" , "format" : ".2f"},
                    {"field" : "Population" , "type": "quantitative" , "title" : "Population" , "format" : ".0f"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 12,
                "fontStyle": "italic",
                "font": "Georgia"
            },
            "encoding": {
                "text" : {"field" : "Country" , "type": "nominal"},
                "color" : {"value" : "black"},
                "opacity" : {
                    "condition" : {
                        "test": "datum['Country'] == 'China' || datum['Country'] == 'India' || datum['Country'] == 'Germany' || datum['Country'] == 'United States of America' || datum['Country'] == 'Brazil' || datum['Country'] == 'United Kingdom' || datum['Country'] == 'Nigeria' || datum['Country'] == 'Australia' || datum['Country'] == 'South Africa' || datum['Country'] == 'Argentina'|| datum['Country'] == 'New Zealand'",
                        "value" : 1
                    },
                    "value" : 0
                }
            }
        }
    ]
}
